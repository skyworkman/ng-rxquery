# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 110

# 前端代码文件缩进比较多，所以用2个空格缩进
[{*.ts,*.html,*.less,*.gql,*.graphql}]
indent_size = 2


[*.md]
max_line_length = off
trim_trailing_whitespace = false
